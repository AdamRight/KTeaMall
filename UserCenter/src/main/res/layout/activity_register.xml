<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ktea.base.widgets.HeaderBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowBack="false"
        app:layout_constraintTop_toTopOf="parent"
        app:rightText="登录"
        app:titleText="注册" />

    <Button
        android:id="@+id/btnRegister1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Anko跳转1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegister2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anko跳转2"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister1" />

    <Button
        android:id="@+id/btnRegister3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MVP注册"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister2" />

    <com.ktea.base.widgets.VerifyButton
        android:id="@+id/registerVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister3" />

</android.support.constraint.ConstraintLayout>